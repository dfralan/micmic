---
import Layout from "../layouts/Layout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import RegisterCard from "../components/RegisterCard.astro";
import { registerUser } from "./api/auth/register.ts";

let status = { error: { code: null } };
if (Astro.request.method === "POST") {
  try {
    await registerUser({ request: Astro.request });
  } catch (error: any) {
    status.error.code = error?.code || null;
  }
}
---

<Layout
  title={SITE_TITLE}
  description={SITE_DESCRIPTION}
  image="https://micmic.shop/img/link-img.jpg"
>
  <RegisterCard {status} />
</Layout>
