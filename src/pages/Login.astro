---
import Layout from "../layouts/Layout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
 
<Layout
	title={SITE_TITLE}
	description={SITE_DESCRIPTION}
	image='https://micmic.shop/img/link-img.jpg'
	>
    <main class="flex flex-col gap-4 items-center justify-center h-screen">
        <div
            class="flex flex-col gap-2 rounded-xl overflow-hidden font-sans border-2 border-base-neutral p-4"
        >
            <button id="google" class="btn">
                <span class="flex gap-2">
                    Login with Google
                </span>
            </button>
        </div>
    </main>
</Layout>
 
<script>
    const { signIn } = await import("auth-astro/client");
 
    const google = document.getElementById("google");
    google.addEventListener("click", () => {
        signIn("google");
    });
</script>