---
import Container from './Container.astro';
import ButtonAccess from './ButtonAccess.astro';

interface Props {
    title: {
        start: string;
        break: string;
        end: string
    }
    button: {
        content: string;
        href: string;
        customClass?: string
    }

}

const { title, button} = Astro.props;
const defaultFlagClass = "flex flex-col w-full items-center py-24 bg-gray-900 justify-center"
---

<div class:list={[defaultFlagClass]}>
    <Container customClass='justify-center items-center flex flex-col gap-6'>
        <h1 class="text-5xl md:w-2/3 text-center font-semibold text-white">
            <span>{title.start}</span>
            <span class="relative">
                <span>{title.break}</span>
                <div class="absolute top-50 z-20 start-0 fill-orange-500 intersect intersected:[clip-path:inset(0_0_0_0)] unintersected:[clip-path:inset(0_100%_0_0)] duration-300 delay-500">
                    <svg class='w-full' width="130" height="19" viewBox="0 0 130 19" xmlns="http://www.w3.org/2000/svg">
                        <path d="M125.966 4.18561C76.0096 -3.55974 32.2954 2.49604 6.25252 11.8721C-2.68983 15.0917 1.2786 20.0634 4.20401 18.5081C8.24834 16.3579 64.1408 -0.614941 125.963 8.52516C130.299 9.16607 130.83 4.93973 125.966 4.18561Z"/>
                    </svg>
                </div>
                
            </span>
            <span>{title.end}</span>
        </h1>
        <ButtonAccess href={button.href} class:list={["text-xl w-fit mx-auto", button.customClass]}>{button.content}</ButtonAccess>
    </Container>
</div>